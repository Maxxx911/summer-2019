        <form action='/login' method='POST' class='md-form mb-5' >
          <div class="md-form mb-5">
            <i class="fas fa-envelope prefix grey-text"></i>
            <input type="email" id="orangeForm-email" placeholder='Your email' name='email' class="form-control validate";l>
          </div>
          <div class="md-form mb-4">
            <i class="fas fa-lock prefix grey-text"></i>
            <input type="password" id="orangeForm-pass" class="form-control validate" name='password' placeholder='Your password'>
          </div>
          <div class="modal-footer d-flex justify-content-center">
            <input class="btn btn-deep-orange" type='submit' value='Login'>
          </div>
        </form>
      </div>
    </div>
