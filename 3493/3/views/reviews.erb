<% @reviews.find_each do |review| %>
  <div class="row mb-4">
      <div class="col-sm-10 col-12">
          <h4> <%=review.user.name%></h4>
          <h4 class="font-weight-bold"><%= review.title%></h4>
      <div class="mt-2">
        <ul class="list-unstyled">
            <li class="comment-date"> <%= review.rating%></li>
        </ul>
      </div>
        <p class=" grey-text">
          <%= review.description%>
        </p>
      </div>
  </div>
<% end%>
