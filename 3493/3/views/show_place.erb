<%= erb :base %>
<body>
    <script type='text/javascript' src="/javascript/show_place.js" ></script>
  <div class='container' style='margin-top:25px' >
    <section class="card wow fadeIn" style="background-image: url(<%= @place.first.image_path%>);">
      <div class="card-body text-black text-center py-5 px-5 my-5">
        <h1 class="mb-4">
          <strong>Cafe <%= @place.first.name %></strong>
        </h1>
        <p class="mb-4 text-black" >
          <strong> <%=@place.first.description %></strong>
        </p>
      </div>
    </section>
    <section>
      <div class="comments-list text-center text-md-left mb-5">
          <div class="text-center mb-4">
              <h3 class="font-weight-bold pt-3 mb-5">Rating <span class="badge pink"><%=@place.first.average_rating%></span></h3>
          </div>
          <% if cookies[:users_id]%>
            <form id= 'form' class="md-form">
              <div class="md-form">
                <input required type="text" id="title" class="form-control" placeholder='Title' name='title'>
                <textarea required id="discription" class="md-textarea form-control" placeholder='Comment text' name='description' ></textarea>
                <div class="form-check form-check-inline">
                  <input required type="radio" class="form-check-input" id="materialInline1" name="rating" value='1'>
                  <label class="form-check-label" for="materialInline1">1</label>
                </div>
                <div class="form-check form-check-inline">
                  <input required type="radio" class="form-check-input" id="materialInline2" name="rating" value='2'>
                  <label class="form-check-label" for="materialInline2">2</label>
                </div>
                <div class="form-check form-check-inline">
                  <input required type="radio" class="form-check-input" id="materialInline3" name="rating" value='3'>
                  <label class="form-check-label" for="materialInline3">3</label>
                </div>
                <div class="form-check form-check-inline">
                  <input required type="radio" class="form-check-input" id="materialInline4" name="rating" value='4'>
                  <label class="form-check-label" for="materialInline4">4</label>
                </div>
                <div class="form-check form-check-inline">
                  <input required type="radio" class="form-check-input" id="materialInline5" name="rating" value='5'>
                  <label class="form-check-label" for="materialInline5">5</label>
                </div>
                <input type="submit" id='createReviewButton' class='btn btn-primary' value='Send' >
              </div>
            </form>
          <%end%>
      </div>
    </section>
    <div id = 'commentBlock'>

    </div>
  </div>
</body>
